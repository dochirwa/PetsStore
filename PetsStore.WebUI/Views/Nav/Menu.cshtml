@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-secondary btn-lg" })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
    {
        controller = "Product",
        action = "List",
        category = link,
        page = 1
    },
    new { @class = "d-flex mt-2 btn btn-light btn-lg" + (link == ViewBag.SelectedCategory ? "btn btn-primary btn-lg" : "") })
}

