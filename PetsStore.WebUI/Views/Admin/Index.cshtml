@model IEnumerable<PetsStore.Domain.Entities.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <br />
    <div class="card-heading text-center">
        <h3>All products</h3>
    </div>

    <div class="card-body">
        <table class="table table-primary table-striped table-condensed table-bordered table-hover">
            <tr>
                <th class="text-end">ID</th>
                <th>Name</th>
                <th class="text-end">Price</th>
                <th class="text-center">Actions</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-end">@item.ProductID</td>
                    <td>@Html.ActionLink(item.Name, "Edit", new { item.ProductID })</td>
                    <td class="text-end">@item.Price.ToString("c")</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("ProductID", item.ProductID)
                            <input type="submit" class="btn btn-danger" value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="card-footer">
        @Html.ActionLink("Add a new product", "Create", null, new { @class = "btn btn-info" })
    </div>
</div>
